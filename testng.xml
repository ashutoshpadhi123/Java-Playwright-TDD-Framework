<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Playwright UI Suite" parallel="tests" thread-count="3">

  <!-- ðŸ”¹ Chrome Execution -->
  <test name="Chrome Browser">
    <parameter name="browser" value="chrome"/>
    <classes>
      <class name="tests.login.ValidLoginTest"/>
      <class name="tests.login.InvalidLoginTest"/>
    </classes>
  </test>

  <!-- ðŸ”¹ Firefox Execution -->
  <test name="Firefox Browser">
    <parameter name="browser" value="firefox"/>
    <classes>
      <class name="tests.login.ValidLoginTest"/>
    </classes>
  </test>

  <listeners>
    <listener class-name="framework.listeners.TestListener"/>
  </listeners>

</suite>